<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCrime2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backer"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >

            <EditText
                android:id="@+id/sendername"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Sender Name" />

            <EditText
                android:id="@+id/senderOrg"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Sender Organisation"
                android:autofillHints="" />

            <EditText
                android:id="@+id/senderAddress"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Organisation Address"
                android:autofillHints="" />

            <EditText
                android:id="@+id/sender_dept"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Sender Department"
                android:autofillHints="" />

            <EditText
                android:id="@+id/roll_no"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="College Roll.no"
                android:autofillHints="" />

            <EditText
                android:id="@+id/senderDate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Sending Date (dd-mm-yyyy)"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:autofillHints="" />

            <EditText
                android:id="@+id/recipientDesig"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Recipient Designation"
                android:autofillHints="" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="Recipient Organisation"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:id="@+id/RecipientOrg"
                android:autofillHints="" />

            <EditText
                android:id="@+id/RecipientAddress"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="20dp"
                android:hint="Recipient Address"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:autofillHints="" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="Internship role"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:id="@+id/intern_role"
                android:autofillHints="" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="Internship Company"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:id="@+id/internCompany"
                android:autofillHints="" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="Tenure"
                android:id="@+id/tenure"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:autofillHints="" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="Start Date"
                android:id="@+id/start_date"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:autofillHints="" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="Timings (from-to o'clock)"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:id="@+id/timing"
                android:autofillHints="" />


            <Button
                android:id="@+id/request_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="#8b40d6"


                android:text="Submit" />







        </LinearLayout>

    </ScrollView>


</LinearLayout>