<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#d5e3d9"
tools:context=".AddCrime">

<TextView
    android:id="@+id/textView3"
    android:layout_width="153dp"
    android:layout_height="58dp"
    android:layout_marginTop="32dp"
    android:text="Aggresion"
    android:textAlignment="center"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/textView4"
    android:layout_width="160dp"
    android:layout_height="34dp"
    android:layout_marginTop="104dp"
    android:text="Weapon"
    android:textAlignment="center"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.091"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/textView6"
    android:layout_width="160dp"
    android:layout_height="34dp"
    android:layout_marginTop="264dp"
    android:text="Injury"
    android:textAlignment="center"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.082"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<RadioButton
    android:id="@+id/radioButton4"
    android:layout_width="101dp"
    android:layout_height="46dp"
    android:layout_marginStart="28dp"
    android:layout_marginTop="20dp"
    android:text="Yes"
    app:layout_constraintBottom_toTopOf="@+id/textView6"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView4"
    app:layout_constraintVertical_bias="0.133" />

<RadioButton
    android:id="@+id/radioButton5"
    android:layout_width="98dp"
    android:layout_height="48dp"
    android:layout_marginStart="64dp"
    android:layout_marginTop="20dp"
    android:text="No"
    app:layout_constraintBottom_toTopOf="@+id/textView6"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/radioButton4"
    app:layout_constraintTop_toBottomOf="@+id/textView4"
    app:layout_constraintVertical_bias="0.137" />

<RadioButton
    android:id="@+id/radioButton9"
    android:layout_width="122dp"
    android:layout_height="45dp"
    android:layout_marginTop="44dp"
    android:text="Yes"
    android:textSize="20sp"
    app:layout_constraintEnd_toStartOf="@+id/radioButton10"
    app:layout_constraintHorizontal_bias="0.656"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView6" />

<RadioButton
    android:id="@+id/radioButton10"
    android:layout_width="122dp"
    android:layout_height="45dp"
    android:layout_marginTop="44dp"
    android:layout_marginEnd="136dp"
    android:text="No"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView6" />

<TextView
    android:id="@+id/textView8"
    android:layout_width="259dp"
    android:layout_height="69dp"
    android:layout_marginBottom="100dp"
    android:text="injury description"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.184"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView5" />

<TextView
    android:id="@+id/textView5"
    android:layout_width="259dp"
    android:layout_height="69dp"
    android:layout_marginBottom="208dp"
    android:text="Weapon description if any"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.184"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/radioButton9"
    app:layout_constraintVertical_bias="0.611" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="57dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


</androidx.constraintlayout.widget.ConstraintLayout>